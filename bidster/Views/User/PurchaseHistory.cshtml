@model IEnumerable<bidster.Models.Orders>
@{
    ViewBag.Title = "PurchaseHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() == 0)
{
    <h2 class="text-center">You do not have any orders yet.</h2>
}
else
{
    <h2 class="text-center">Token order history</h2>

    <div class="box text-center">
        @foreach(var item in Model)
        {
            <p>Amount of tokens ordered: @item.Tokens</p>
            <p>Price: @item.Price</p>
        }
    </div>

}